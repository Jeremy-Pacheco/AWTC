<%- include('header', { shopName: (typeof shopName !== 'undefined' ? shopName : 'A Will To Change') }) %>

<div style="max-width:640px; margin:36px auto;">
  <h2>Admin / Coordinator Login</h2>

  <% if (error) { %>
    <div style="background:#ffe6e6;color:#900;padding:10px;border-radius:4px;margin-bottom:12px;"><%= error %></div>
  <% } %>

  <form method="POST" action="/login">
    <div style="margin-bottom:12px;">
      <label for="email">Email</label><br />
      <input id="email" name="email" type="email" value="<%= email || '' %>" required style="width:100%;padding:8px;border:1px solid #ccc;border-radius:4px" />
    </div>

    <div style="margin-bottom:12px;">
      <label for="password">Password</label><br />
      <input id="password" name="password" type="password" required style="width:100%;padding:8px;border:1px solid #ccc;border-radius:4px" />
    </div>

    <div>
      <button type="submit" style="background:#2b6cb0;color:#fff;padding:10px 14px;border:none;border-radius:4px;cursor:pointer">Sign in</button>
      <a href="/" style="margin-left:12px;color:#333;text-decoration:none">Back</a>
    </div>
  </form>
</div>

</body>
</html>
